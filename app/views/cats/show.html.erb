<h1><%= @cat.name %></h1>
<table>
    <tr>
        <th>Info about <%= @cat.name %></th>
        <td></td>
    </tr>

    <tr>
        <th>Color: </th>
        <td><%= @cat.color %></td>
    </tr>
    <tr>
        <th>Sex: </th>
        <td><%= @cat.sex %></td>
    </tr>
    <tr>
        <th>Age: </th>
        <td><%= @cat.age %></td>
    </tr>
    <tr>
        <th>Description: </th>
        <td><%= @cat.description %></td>
    </tr>
</table>

<%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req %>
  <% end %>
</table>

