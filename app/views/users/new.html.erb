<h1>New User</h1>

<ul>
  <% flash[:errors].try(:each) do |err_msg| %>
    <li><%= err_msg %></li>
  <% end %>
</ul>

<form action="<%= user_url %>" method="POST">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"

  <label>
    Username:
    <input type="text"
      name="user[user_name]"
      value="<%= @user.user_name %>"><br>
  </label>

  <label>
    Password:
    <input type="password"
      name="user[password]"
      value="<%= @user.password %>"><br>
  </label>

  <button>Submit!</button>
</form>
